{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "composite": true,
    "declaration": true,
    "noEmit": false,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "rootDir": "src",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../shared"
    }
  ],
  "include": ["src"],
  "exclude": ["runtime.d.ts", "theme.d.ts", "node_modules", "dist"]
}
