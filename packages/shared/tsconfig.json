{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "composite": true,
    "declarationDir": "dist",
    "noEmit": false,
    "declaration": true,
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules"]
}
