{
  "extends": "@modern-js/tsconfig/base",
  "declaration": true,
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "isolatedModules": true
  },
  "include": [
    "src",
    "vitest.config.ts",
    "rslib.config.ts",
    "runtime.ts",
    "theme.ts"
  ],
  "exclude": ["**/node_modules"],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../shared"
    }
  ]
}
