{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "strict": false,
    "declaration": true,
    "noEmit": false,
    "declarationDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "rootDir": "src",
    "composite": true,
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "@theme": ["./theme-default"],
      "@/theme-default/*": ["./theme-default/*"]
    }
  },
  "include": ["src"],
  "references": [
    {
      "path": "../plugin-auto-nav-sidebar"
    },
    {
      "path": "../plugin-last-updated"
    },
    {
      "path": "../plugin-container-syntax"
    },
    {
      "path": "../plugin-medium-zoom"
    },
    {
      "path": "../shared"
    },
    {
      "path": "../theme-default"
    },
    {
      "path": "../runtime"
    }
  ],
  "exclude": ["runtime.ts", "theme.ts", "node_modules"]
}
