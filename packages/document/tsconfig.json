{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "jsx": "preserve",
    "paths": {
      "i18n": ["./i18n.json"],
      "@/assets/*": ["./docs/public/*"],
      "@/components/*": ["./components/*"],
      "@zh/*": ["./docs/zh/*"],
      "@en/*": ["./docs/en/*"],
    }
  },
  "include": [
    "./rspress.config.ts",
    "docs/**/*",
    "src/**/*",
    "components/**/*",
    "theme/**/*",
    "search.tsx"
  ]
}
