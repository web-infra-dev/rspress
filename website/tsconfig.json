{
  "extends": "@rspress/config/tsconfig",
  "compilerOptions": {
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "paths": {
      "i18n": ["./i18n.json"],
      "@theme": ["./theme"],
      "@zh/*": ["./docs/zh/*"],
      "@en/*": ["./docs/en/*"]
    },
    "module": "ESNext"
  },
  "include": [
    "./rspress.config.ts",
    "docs/**/*",
    "src/**/*",
    "theme/**/*",
    "search.tsx"
  ],
  "mdx": {
    "checkMdx": true
  }
}
