{
  "private": true,
  "name": "monorepo",
  "scripts": {
    "new": "modern new",
    "reset": "modern clear",
    "change": "modern change",
    "bump": "modern bump",
    "pre": "modern pre",
    "prepare": "npm run build && husky install",
    "dev": "turbo run dev --filter {packages/**} --cache-dir=.turbo --no-daemon",
    "build": "turbo run build --filter {packages/**} --cache-dir=.turbo --no-daemon",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "turbo run test --filter {packages/**} --cache-dir=.turbo --no-daemon",
    "test:e2e": "playwright test",
    "change-status": "modern change-status",
    "gen-release-note": "modern gen-release-note",
    "release": "modern release",
    "deploy": "modern deploy",
    "lint": "modern lint",
    "upgrade": "modern upgrade",
    "dev:website": "turbo run dev --filter {packages/document} --cache-dir=.turbo --no-daemon",
    "build:website": "turbo run build --filter {packages/document} --cache-dir=.turbo --no-daemon",
    "preview:website": "cd packages/document && npm run preview",
    "update:modern": "ts-node ./scripts/update-modern.ts"
  },
  "engines": {
    "node": ">=16.18.1"
  },
  "packageManager": "pnpm@8.6.1",
  "lint-staged": {
    "*.{ts,tsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ],
    "*.{js,jsx,mjs,mjsx,cjs,cjsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/",
    ".rpt2_cache/"
  ],
  "workspaces": {
    "packages": [
      "apps/*",
      "examples/*",
      "features/*",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@manypkg/get-packages": "^2.2.0",
    "@modern-js-app/eslint-config": "2.35.1",
    "@modern-js/eslint-config": "2.35.1",
    "@modern-js/generator-utils": "3.2.2",
    "@modern-js/module-tools": "2.35.1",
    "@modern-js/monorepo-tools": "2.35.1",
    "@modern-js/tsconfig": "2.35.1",
    "@playwright/test": "1.33.0",
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^11.0.1",
    "cross-spawn": "^7.0.3",
    "execa": "8.0.1",
    "fs-extra": "^11.1.1",
    "get-port": "5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "~13.1.0",
    "playwright": "1.33.0",
    "prettier": "^2.6.2",
    "tree-kill": "^1.2.2",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.12",
    "vitest": "0.34.1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
